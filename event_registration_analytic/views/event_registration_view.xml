<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_event_registration_tree_inh_assistant">
            <field name="name">view.event.registration.tree.inh.assistant</field>
            <field name="model">event.registration</field>
            <field name="inherit_id" ref="event.view_event_registration_tree" />
            <field name="arch" type="xml">
                <field name="event_id" position="after">
                    <field name="parent_num_bank_accounts" />
                    <field name="parent_num_valid_mandates" />
                    <field name="required_account" invisible="1"/>
                    <field name="employee" invisible="1"/>
                    <field name="analytic_account"
                         attrs="{'readonly': [('required_account','=',False)]}" />
                </field>
                <field name="state" position="before">
                    <field name="submitted_evaluation" />
                    <field name="submitted_evaluation_error" />
                </field>
                <tree string="Registration" position="attributes">
                    <attribute name="colors">red:employee!=False</attribute>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_registration_search_inh_analytic">
            <field name="name">view.event.registration.search.inh.analytic</field>
            <field name="model">event.registration</field>
            <field name="inherit_id" ref="event.view_registration_search" />
            <field name="arch" type="xml">
                <filter string="Confirmed" position="after">
                    <filter string="With evaluation sent" domain="[('submitted_evaluation', '=', 'yes')]" />
                    <filter string="Without evaluation sent" domain="[('submitted_evaluation', '=', 'no')]" />
                    <filter string="Without bank account" domain="[('parent_num_bank_accounts', '=', 0)]" />
                    <filter string="Without Sepa active" domain="[('parent_num_valid_mandates', '=', 0)]" />
                    <filter string="With bank account" domain="[('parent_num_bank_accounts', '!=', 0)]" />
                    <filter string="With Sepa active" domain="[('parent_num_valid_mandates', '!=', 0)]" />
                </filter>
                <filter string="Event" position="after">
                    <filter string="Evaluation send" name="group_evaluation_send" domain="[]" context="{'group_by':'sumitted_evaluation'}"/>
                </filter>
            </field>
        </record>
        <record model="ir.ui.view" id="view_event_registration_form_inh_analytic">
            <field name="name">view.event.registration.form.inh.analytic</field>
            <field name="model">event.registration</field>
            <field name="inherit_id" ref="event.view_event_registration_form" />
            <field name="arch" type="xml">
                <xpath expr="//group/group//field[@name='partner_id']/../.." position="after">
                    <group colspan="4">
                        <group>
                            <separator string="Other Information" colspan="2"/>
                            <field name="analytic_account" readonly="1" string="Analytic account"/>
                            <field name="parent_num_bank_accounts" readonly="1" string="# Bank accounts"/>
                            <field name="parent_num_valid_mandates" readonly="1" string="# Valid mandates"/>
                        </group>
                        <group colspan="2" />
                    </group>
                </xpath>
            </field>
        </record>
    </data>
    <data noupdate="1">
        <record id="email_template_event_registration_evaluation" model="email.template">
            <field name="name">Event registration evaluation mass mail</field>
            <field name="model_id" ref="event.model_event_registration"/>
            <field name="auto_delete" eval="True"/>
            <field name="partner_to">${object.partner_id.parent_id.id}</field>
            <field name="email_to">${object.partner_id.parent_id.email}</field>
            <field name="reply_to">${(object.company_id.email or 'noreply@localhost')|safe}</field>
            <field name="subject">Declarations AEAT model 347</field>
            <field name="lang">${object.partner_id.parent_id.lang}</field>
            <field name="body_html"><![CDATA[
<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
    <p>Dear Parents.</p>
    <p>In order to better understand the evolution and situation of your children in the out-of-school activity of robotics, we enclose the corresponding evaluation report.</p>
    <p>One of our main goals is to keep you informed and we believe this can be a good tool for this.</p>
    <p>We remain at your disposal for any clarification you may need or suggestion that you want to contribute.</p>
    <p>Attentively,</p>
</div>
            ]]></field>
        </record>
        <act_window name="Send email with evaluations"
            res_model="wiz.send.email.registration.evaluation"
            src_model="event.registration"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            id="action_event_registration_evaluation_mass_mail"
            />
    </data>
</openerp>
