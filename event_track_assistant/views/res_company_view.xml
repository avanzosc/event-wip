<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="res_company_daynighttime_form_view" model="ir.ui.view">
            <field name="name">res.company.daynighttime.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='account_grp']" position="after">
                    <group name="timesheets_grp" string="Timesheets">
                        <field name="daytime_start_hour" />
                        <field name="nighttime_start_hour" />
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
